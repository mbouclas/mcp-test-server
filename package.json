{
  "name": "mcp-custom-service-server",
  "version": "1.0.0",
  "description": "MCP Server that connects to custom services and integrates with Ollama",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-custom-service": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc && node build/index.js",
    "setup": "tsc && node build/setup.js",
    "example-service": "node src/examples/example-service.js",
    "test-integration": "node src/tests/test-integration.js",
    "chat": "node src/utils/interactive-chat.js",
    "web-api": "node src/examples/web-api-server.js",
    "real-web-api": "node src/examples/real-mcp-web-api.js",
    "simple-web-api": "node src/examples/simple-web-api.js",
    "minimal-web-api": "node src/examples/minimal-web-api.js",
    "agent-web-api": "tsc && node src/examples/agent-enhanced-web-api.js",
    "frontend-server": "node src/frontend/frontend-mcp-server.js",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:verbose": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --verbose",
    "test:working": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathIgnorePatterns=\"web-api.test.ts|ollama-bridge-fixed.test.ts|minimal-worker-exit.test.ts\"",
    "test:summary": "echo \"ðŸ§ª Running MCP Server Test Suite\" && echo \"ðŸ“‹ Worker exit warning is expected (Jest/TypeScript/Windows limitation)\" && npm test && echo \"âœ… Tests complete - see JEST_TESTING_FINAL_REPORT.md for details\""
  },
  "keywords": [
    "mcp",
    "ollama",
    "server",
    "tools"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/node-fetch": "^2.6.12",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "enhanced-resolve": "^5.18.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "node-fetch": "^2.7.0",
    "zod": "^3.25.56"
  }
}